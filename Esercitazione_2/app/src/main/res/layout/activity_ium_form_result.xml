<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:text="Dati Inseriti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/AppTitleRes"
                android:layout_weight="1"
                android:textSize="36dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONFERMA"
                android:id="@+id/errorText"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#8f30ff30"
                android:textColor="#00ba00"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleNomeRes"
                android:text="Nome:"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attrNomeRes"
                android:text="Prova"
                android:textSize="26dp"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleCognomeRes"
                android:text="Cognome:"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attrCognomeRes"
                android:text="Prova"
                android:textSize="26dp"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleDateRes"
                android:text="Data di Nascita:"
                android:textSize="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/attrDateRes"
                android:text="Prova"
                android:textSize="26dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="6dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Confirm"
                android:text="OK"
                android:textSize="36dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>